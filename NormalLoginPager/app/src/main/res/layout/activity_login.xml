<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/dahai"
    tools:context="com.mediacube.normalloginpager.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ima_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/guanbi2"/>

        <TextView
            android:id="@+id/tv_zh"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:gravity="bottom"
            android:layout_below="@id/ima_btn"
            android:text="账 号："
            android:textColor="#000000"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/et_zh"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@id/tv_zh"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/tv_mima"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/et_zh"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="bottom"
            android:text="密 码:"
            android:textColor="#000000"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/et_mima"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@id/tv_mima"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:maxLines="200"
            android:password="true"
            android:scrollHorizontally="true"
            />

        <CheckBox
            android:id="@+id/cb_rememberpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_mima"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="记住密码"
            android:textColor="#000000"
            />
        <CheckBox
            android:id="@+id/cb_auto_login"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/cb_rememberpwd"
            android:layout_marginLeft="15dp"
            android:text="自动登陆"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/cb_auto_login"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="登陆"
            android:textColor="#000000"
            android:textSize="20sp"
            />


    </RelativeLayout>
</LinearLayout>
